<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="webfactory_navigation.twig_theme_extension.class">Webfactory\Bundle\NavigationBundle\Twig\NavigationThemeExtension</parameter>
        <parameter key="webfactory_navigation.default_theme.file">WebfactoryNavigationBundle:Navigation:baseNavigationTheme.html.twig</parameter>
    </parameters>

    <services>
        <service id="webfactory_navigation.tree_factory.dispatcher" shared="false" class="Webfactory\Bundle\NavigationBundle\Build\BuildDispatcher" public="true" />

        <service id="webfactory_navigation.tree_factory" class="Webfactory\Bundle\NavigationBundle\Build\TreeFactory" public="true" lazy="true">
            <argument type="service" id="config_cache_factory" />
            <argument>%kernel.cache_dir%/webfactory_navigation/tree.php</argument>
            <argument type="service" id="service_container"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="logger" on-invalid="null"/>
            <argument type="service" id="debug.stopwatch" on-invalid="null"/>
            <tag name="monolog.logger" channel="webfactory_navigation"/>
        </service>

        <service id="webfactory_navigation.tree" class="Webfactory\Bundle\NavigationBundle\Tree\Tree" public="true" lazy="true">
            <factory service="webfactory_navigation.tree_factory" method="getTree" />
        </service>

        <service id="webfactory_navigation.event.active_node_event_listener" class="Webfactory\Bundle\NavigationBundle\Event\ActiveNodeEventListener">
            <argument type="service" id="request_stack"/>
            <tag name="kernel.event_listener" event="webfactory_navigation.tree_initialized" method="initializeTree"/>
        </service>

        <service id="webfactory_navigation.twig_theme_extension" class="%webfactory_navigation.twig_theme_extension.class%" public="false">
            <argument type="collection">
                <argument>%webfactory_navigation.default_theme.file%</argument>
            </argument>
            <tag name="twig.extension"/>
        </service>

        <service id="webfactory_navigation.twig_extension" class="Webfactory\Bundle\NavigationBundle\Twig\NavigationExtension" public="false">
            <argument type="service" id="webfactory_navigation.tree_factory"/>
            <tag name="twig.extension"/>
        </service>

        <service id="webfactory_navigation.command.dump_tree_command" class="Webfactory\Bundle\NavigationBundle\Command\DumpTreeCommand">
            <argument type="service" id="webfactory_navigation.tree_factory"/>
            <tag name="console.command"/>
        </service>

        <service id="webfactory_navigation.command.lookup_node_command" class="Webfactory\Bundle\NavigationBundle\Command\LookupNodeCommand">
            <argument type="service" id="webfactory_navigation.tree_factory"/>
            <tag name="console.command"/>
        </service>

    </services>
</container>
